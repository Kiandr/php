{
    "config": {
        "title": "Content Page",
        "description": "This template focuses on the page content for a more immersive reading experience.",
        "selectable": true,
        "order": 2
    },
    "containers": {
        "sidebar": {
            "cms-nav": {
                "_enabled": "{variable.showNav}",
                "category": "true"
            },
            "blog-nav": {
                "_enabled": "{info.blog}"
            }
        }
    },
    "variables": {
        "showNav": {
            "type": "boolean",
            "title": "Show Navigation",
            "default": false
        }
    }
}