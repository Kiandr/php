{
    "config": {
        "title": "Cover Page",
        "description": "Use for homepage &amp; landing pages.",
        "selectable": true,
        "order": 1
    },
    "variables": {
        "background": {
            "type": "select",
            "title": "Background",
            "default": "photo",
            "options": [
                { "value": "photo", "title": "Photo" },
                { "value": "slideshow", "title": "Slideshow" },
                { "value": "video", "title": "YouTube Video" },
                { "value": "pano", "title": "Panoramic Photo" },
                { "value": "360", "title": "360 Photo" }
            ],
            "children": {
                "slides": {
                    "_enabled": ["slideshow"],
                    "type": "list",
                    "minItems": 0,
                    "maxItems": 100,
                    "title": "Image Slides",
                    "createText": "Add Slide",
                    "updateText": "Edit Slide",
                    "revertText": "Revert Slides",
                    "previewText": "Slide #{#}",
                    "default": [{
                        "image": "/uploads/cover-photo.jpg"
                    }],
                    "variables": {
                        "image": {
                            "type": "image",
                            "title": "Image (Max. file size: 10mb)",
                            "required": true
                        }
                    }
                },
                "image": {
                    "_enabled": ["photo"],
                    "type": "image",
                    "title": "Image (Max. file size: 10mb)",
                    "default": "/uploads/cover-photo.jpg"
                },
                "pano_image": {
                    "_enabled": ["pano"],
                    "type": "image",
                    "title": "Panoramic Image (Max. dimension: 4096px;   Max. file size: 10mb)",
                    "default": "/uploads/cover-photo.jpg"
                },
                "360_image": {
                    "_enabled": ["360"],
                    "type": "image",
                    "title": "360 Image (Max. dimensions: 3200Ã—1600px;   Max. file size: 10mb)",
                    "default": "/uploads/cover-photo.jpg"
                },
                "video_id": {
                    "_enabled": ["video"],
                    "type": "text",
                    "title": "YouTube Video ID",
                    "required": true
                },
                "video_mute": {
                    "_enabled": ["video"],
                    "type": "boolean",
                    "title": "Mute Video",
                    "default": true,
                    "tooltip": "If video is not muted, mobile phones will block autoplay."
                },
                "video_autoplay": {
                    "_enabled": ["video"],
                    "type": "select",
                    "title": "Autoplay Video",
                    "options": [
                        { "value": "off", "title": "Off" },
                        { "value": "on", "title": "On" },
                        { "value": "desktop", "title": "Desktop Only" },
                        { "value": "mobile", "title": "Mobile Only" }
                    ],
                    "default": "on"
                },
                "video_pause": {
                    "_enabled": ["video"],
                    "type": "select",
                    "title": "Auto-Pause Video",
                    "options": [
                        { "value": false, "title": "Off" },
                        { "value": "scroll", "title": "During Scroll" },
                        { "value": "view", "title": "Out of View" }
                    ],
                    "default": false
                },
                "video_interact" : {
                    "_enabled": ["video"],
                    "type": "boolean",
                    "title": "Allow Interaction",
                    "default": true
                },
                "tint": {
                    "_enabled": true,
                    "type": "select",
                    "title": "Tint Overlay",
                    "options": [
                        { "value": "full", "title": "Full" },
                        { "value": "top", "title": "Top Half" },
                        { "value": "bottom", "title": "Bottom Half" },
                        { "value": "vignette", "title": "Framed" },
                        { "value": "dusk", "title": "Dusk" },
                        { "value": "clear", "title": "None" }
                    ],
                    "default": "full"
                }
            },
            "required": true
        },
        "foreground": {
            "type": "select",
            "title": "Foreground",
            "default": "search",
            "options": [
                { "value": "search", "title": "IDX Search" }
            ],
            "children": {
                "text-align": {
                    "type": "select",
                    "title": "Text Alignment",
                    "options": [
                        { "value": "left", "title": "Left" },
                        { "value": "center", "title": "Center" },
                        { "value": "right", "title": "Right" }
                    ],
                    "default": "center"
                },
                "horizontal": {
                    "type": "select",
                    "title": "Alignment",
                    "options": [
                        { "value": "left", "title": "Left" },
                        { "value": "center", "title": "Center" },
                        { "value": "right", "title": "Right" }
                    ],
                    "default": "center"
                },
                "vertical": {
                    "type": "select",
                    "title": "Vertical Alignment",
                    "options": [
                        { "value": "top", "title": "Top" },
                        { "value": "middle", "title": "Middle" },
                        { "value": "bottom", "title": "Bottom" }
                    ],
                    "default": "middle"
                },
                "preheading": {
                    "type": "text",
                    "title": "Pre Heading"
                },
                "heading": {
                    "type": "text",
                    "title": "Heading"
                },
                "intro": {
                    "type": "text",
                    "title": "Intro"
                }
            }
        }
    }
}