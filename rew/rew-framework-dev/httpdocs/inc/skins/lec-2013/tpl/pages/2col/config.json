{
	"config" : {
		"order"			: 2,
		"title"			: "2 Column",
		"description"	: "The 2 Column Layout is used in most cases and includes a sidebar for site navigation. The sidebar can be configured to appear on the left or right on a page-by-page basis.",
		"selectable"	: "true"
	},
    "containers" : {
    	"body" : {
            "user-bar" : {
            }
    	},
        "sidebar" : {
        	"social-share" : {},
		    "cms-snippet"  : {
		    	"name"		: "lec-sidebar"
		    },
		    "cms-nav" : {
		    	"_enabled"	: "{info.cms}"
		    },
			"blog-nav" : {
				"_enabled"	: "{info.blog}"
			},
			"directory-nav" : {
				"_enabled"	: "{info.directory}"
			},
			"idx-search" : {
				"_enabled"	: "{info.idx-map}"
			}
        }
    },
    "variables" : {
	    "navPosition" : {
		    "type"		: "select",
		    "title"		: "Navigation",
		    "required"	: true,
		    "default"	: "right",
		    "options"	: [
			    { "value" : "left", "title" : "Left" },
			    { "value" : "right", "title" : "Right" }
		    ]
	    }
    }
}