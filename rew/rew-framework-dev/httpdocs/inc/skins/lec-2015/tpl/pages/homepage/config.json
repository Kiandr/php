{
	"config": {
		"order"			: 3,
		"title"			: "Homepage",
		"description"	: "Use for homepage &amp; landing pages.",
		"selectable"	: "true"
	},
	"containers": {
		"feature": {
			"slideshow": {
				"_enabled": "{!info.subdomain-site}",
				"paginate": "dots"
			},
			"lec-agent": {
				"_enabled": "{info.agent-site}"
			},
			"lec-team": {
				"_enabled": "{info.team-site}"
			},
			"lec-feature": {
				"_enabled": true
			}
		}
	},
	"variables": {
		"ctas": {
			"type": "list",
			"title": "Call to Actions",
			"createText": "Add Call to Action",
			"updateText": "Edit Call to Action",
			"previewText": "{heading}",
			"minItems": 0,
			"maxItems": 4,
			"default": [{
				"heading": "Search from Anywhere",
				"content": "Our extensive search function will allow you to view all MLS&reg; listed properties.",
				"image": "/inc/skins/lec-2015/img/hp-cols-a.jpg",
				"link": "/idx/"
			}, {
				"heading": "Home Value Estimate",
				"content": "What is your home really worth? Find out your property's true value in today's market.",
				"image": "/inc/skins/lec-2015/img/hp-cols-c.jpg",
				"link": "/cma.php"
			}, {
				"heading": "Search by Community",
				"content": "Discover your new dream home in the community you love.",
				"image": "/inc/skins/lec-2015/img/hp-cols-b.jpg",
				"link": "/communities.php"
			}],
			"variables": {
				"heading": {
					"type": "text",
					"title": "Heading",
					"required": true
				},
				"content": {
					"type": "textarea",
					"title": "Content"
				},
				"link": {
					"type": "text",
					"title": "Link URL",
					"placeholder": "http://"
				},
				"image": {
					"type": "image",
					"title": "Photo",
					"default": "/inc/skins/lec-2015/img/placeholder.png",
					"tooltip": "Recommended size: 670x450",
					"required": true
				}
			}
		},
		"features": {
			"type": "list",
			"title": "Feature CTAs",
			"previewText": "{heading}",
			"required": true,
			"default": [{
				"heading": "Sellers",
				"subtext": "Sell Your Home for More",
				"content": "Receive a free market analysis",
				"link": "/selling.php"
			}, {
				"heading": "Awarded",
				"subtext": "#1 Top Work Place",
				"content": "Austin American-Statesman",
				"link": "/about.php"
			}, {
				"heading": "Agents",
				"subtext": "We Only Hire the Best",
				"content": "10 Years Average Experience",
				"link": "/agents.php"
			}],
			"variables": {
				"heading": {
					"type": "text",
					"title": "Heading",
					"required": true
				},
				"subtext": {
					"type": "text",
					"title": "Subtext"
				},
				"content": {
					"type": "textarea",
					"title": "Content"
				},
				"link": {
					"type": "text",
					"title": "Link URL",
					"placeholder": "http://"
				},
				"image": {
					"type": "image",
					"title": "Photo",
					"default": "/inc/skins/lec-2015/img/placeholder.png",
					"tooltip": "Recommended size: 680x150",
					"required": true
				}
			}
		},
		"company": {
			"type": "item",
			"title": "Company CTA",
			"createText": "Setup Company CTA",
			"updateText": "Update Company CTA",
			"previewText": "{heading}",
			"default": {
				"heading": "Your Real Estate Specialists",
				"subtext": "WELCOME TO YOUR REAL ESTATE WEBSITE",
				"content": "This is the most useful real estate website in the area, with advanced search technologies that allow you to view listings in the MLS, or to ensure your own home is sold in reasonable time and for top dollar.\n\nYou'll also find our web site to be a one-stop resource for your online real estate research. We're eager to tell you what we know about the local market for condos or homes, or preconstruction, or whatever is most interesting at the moment - that's where you'll usually find us! We delight in helping people succeed in this market, and when our clients come out of the transaction breathing that big sigh of relief, we're just as satisfied as they are.\n\nSo please, have a look around, and contact us with any questions you might have about the market or our services. No question is too mundane - we want to help!",
				"linkText": "Learn More About Us...",
				"linkUrl": "/about.php"
			},
			"variables": {
				"heading": {
					"type": "text",
					"title": "Heading",
					"required": true
				},
				"subtext": {
					"type": "text",
					"title": "Subtext",
					"required": true
				},
				"content": {
					"type": "textarea",
					"title": "Content",
					"rows": 6
				},
				"linkText": {
					"type": "text",
					"title": "Link Text",
					"required": true
				},
				"linkUrl": {
					"type": "text",
					"title": "Link URL",
					"placeholder": "http://",
					"required": true
				},
				"image": {
					"type": "image",
					"title": "Photo",
					"default": "/inc/skins/lec-2015/img/placeholder.png",
					"tooltip": "Recommended size: 980x750",
					"required": true
				}
			}
		}
	}
