.tabs {
    position: relative;
}

.tabs::after {
    content: " ";
    display: block;
    height: 0;
    clear: both;
}

.tabs.cols a {
    display: block;
}

.tabs,
.tabs ul,
.tabs li {
    list-style: none;
    margin: 0;
    padding: 0;
}

.tabs a {
    font: 15px/24px Lato, sans-serif;
    color: #9d9da6;
    text-rendering: optimizeLegibility;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    text-decoration: none;
    padding: 12px 0;
    margin-right: 18px;
    float: left;
    text-align: center;
    border-bottom: 1px solid transparent;
}

.tabs a:hover {
    color: #555;
}

.tabs .current a {
    border-bottom-color: #0096d8;
    color: #0096d8;
    position: relative;
    font-weight: bold;
}

.tabbed ul li {
    float: left;
    margin: 0 15px;
}

.tabbed ul li a {
    text-decoration: none;
    color: #40404e;
    padding: 10px 0 8px;
    float: left;
    border-bottom: 2px solid transparent;
}

.tabbed ul .ui-state-active a {
    color: #fff;
    border-bottom: 2px solid #0096d8;
}

.tabbed,
.tabbed ul {
    margin: 0;
    padding: 0;
    list-style: none;
    overflow: hidden;
}

.tabs .col a {
    display: block;
    width: 100%;
}

.tabs.cols {
    margin: 0;
    width: auto !important;
    float: none !important;
}

.tabs.cols li {
    margin: 0;
    width: 33.333%;
}