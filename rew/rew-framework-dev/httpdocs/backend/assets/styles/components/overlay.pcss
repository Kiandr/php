#overlay {
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: 9999;
    display: none;
}

#overlay .win {
    max-width: 100%;
    margin: 0 auto;
    height: 100vh;
    background: #40404e;
}

/**
 * TODO: Review use case for `.ovr`
 * Currently we use `#overlay`
 */

.ovr {
    background: rgba(64, 64, 78, .33);
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 9998;
}