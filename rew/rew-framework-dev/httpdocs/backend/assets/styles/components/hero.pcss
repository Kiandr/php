.hero {
    width: 480px;
    max-width: 100%;
    text-align: center;
    margin: 0 auto;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
}

.hero > img {
    width: 180px;
}

.hero h2,
.hero p {
    margin: 8px 0;
    padding: 0 16px;
}

@media only screen and (max-height: 500px) {
    .hero > img {
        display: none;
    }
}