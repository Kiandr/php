.divider {
    display: flex;
}

.divider::after {
    content: "";
    display: block;
    flex: 9 0 auto;
    background: #ddd;
    height: 1px;
    align-self: center;
}

.divider::before {
    content: "";
    display: block;
    flex: 9 0 auto;
    background: #ddd;
    height: 1px;
    align-self: center;
}

.divider__label {
    flex: 0 0 auto;
    padding: 0 12px;
}

.divider__label--left {
    order: -1;
    padding-left: 0;
}

.divider__label--right {
    order: 1;
    padding-right: 0;
}