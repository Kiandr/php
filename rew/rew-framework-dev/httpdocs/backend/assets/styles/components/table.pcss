.table__wrap {
    overflow-x: scroll;
    border: 1px solid #ccc;
    padding-left: 8px;
    padding-right: 8px;
}

@media (max-width: 1260px) {
    .table__wrap {
        box-shadow: 2px 0 0 #ccc;
    }
}

.table {
    width: 100%;
    margin: 0;
    padding: 0;
    border-collapse: collapse;
}

.table a {
    text-decoration: none;
}

.table td {
    padding: 20px 10px;
    color: #40404e;
    border-bottom: 1px solid #e2e1e8;
    text-align: center;
}

.table td:not(:first-of-type) {
    border-left: 1px solid #ccc;
}

.table thead th {
    font-size: 14px;
    color: #60606d;
    padding: 5px 8px;
    text-rendering: optimizeLegibility;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    font-size: 12px;
    text-transform: uppercase;
    font-weight: normal;
    text-align: center;
    border-bottom: 1px solid #ccc;
}

.table thead th:not(:first-of-type) {
    border-left: 1px solid #ccc;
}

.table thead th a {
    text-decoration: inherit;
    color: inherit;
}

.table .item_content_title {
    font-size: 14px;
}