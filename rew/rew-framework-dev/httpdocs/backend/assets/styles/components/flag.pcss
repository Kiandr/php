.flag {
    font-size: 14px;
    display: inline-block;
    padding-left: 5px;
    padding-right: 5px;
    margin-top: 8px;
    margin-bottom: 8px;
    border: 1px solid;
}

.flag--positive {
    color: #fff;
    background-color: #35d57e;
    border-color: #35d57e;
}

.flag--negative {
    color: #fff;
    background-color: #f4514c;
    border-color: #f4514c;
}